<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title></title>
		<style>
			#nickname{
				width:150px;
			}
		</style>
	</head>
	<body>
		<input id="username"><button onclick="checkUsername()">检查</button >
		<input type="button" value="检查" onclick="checkUsername()">
		<br>
		<input id="nickname" placeholder="请输入昵称,3-8个字符,可以是汉字或字母或数字" type="text">
		<button onclick="checkNickname()">检查</button>
	</body>
	<script>
		function checkUsername(){
			let username=document.getElementById("username")
		// 	if(username.value==""){
		// 		alert("请输入用户名")
		// 	}
		// 	if(username.value.trim()==""){
		// 		alert("请输入用户名")
		// 	}
		// }
		// 使用正则表达式
		//判断输入的内容是不是hello
		//let reg=/hello/;
		// let reg=/^hello$/i;//判断是不是完全相同，^表示开始，￥表示结束
		// let reg=/^hello$/i//完全相同，不区分大小写
		//let reg=/^[A-Za-z0-9]{3}$/ //【】代表取值范围，其中的内容是可以允许的内容
		let reg=/^[A-Za-z0-9]{2,5}$/
		if(reg.test(username.value)){
			alert("正确")
			}
			else{
				alert("长进项美jj")
			}
			}
			function checkNickname(){
				//获取昵称文本框
				let nickname=document.getElementById("nickname");
				let reg=/^[A-Za-z0-9\u4e00-\u9fa5]{3,8}$/
				if(reg.test(nickname.value)){
					alert("cjx")
					}
				
				else{
					alert("yky")
				}
				
				}
			
	</script>
</html>
